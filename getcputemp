#!/usr/bin/python

# Import
from os import popen
from RemoveAllChars import OnlyInts

tempCrit = 750
tempWarn = 550
tempCold = 400

# Get the data
rawData = popen("sensors | grep 'Physical id 0:'").read()
data = rawData.replace('\n', '')
data = data.replace('+', '')
dataList = data.split(' ')

# Print final temp
print("CPU: " + dataList[4] + "\n")

# Remove all the non-int characters from dataList[4]
onlyInts = int(OnlyInts(dataList[4]))

# Add colors for i3blocks
if onlyInts >= tempWarn and onlyInts < tempCrit:
    print("#FFCC00") # Orange
elif onlyInts >= tempCrit:
    print("#FF000") # Red
elif onlyInts <= tempCold:
    print("#0000FF") # Blue
else:
    print("#00CC00") # Green
